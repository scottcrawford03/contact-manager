<div class='company'>
  <h1><%= @company.name %></h1>
  <p id="notice"><%= notice %></p>

  <ul class='actions'>
    <li><%= render 'phone_numbers/phone_numbers', :phone_numbers => @company.phone_numbers %></li>
    <li><%= render 'email_addresses/email_addresses', :email_addresses => @company.email_addresses %></li>
  </ul>

  <%= link_to('new email address', new_email_address_path(contact_id: @company.id, contact_type: 'Company')) %> |
  <%= link_to 'Edit', edit_company_path(@company) %> |
  <%= link_to('Add phone number', new_phone_number_path(contact_id: @company.id, contact_type: 'Company')) %> |
  <%= link_to 'Back', companies_path %>
</div>
